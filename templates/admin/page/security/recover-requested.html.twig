{% endblock %}

{% block body %}
	<h4 class="text-success mb-4">{{ 'page.recover_request.success.title' | trans }}</h4>
	<p class="lead">{{ 'page.recover_request.success.legend' | trans }}</p>
	
	<div class="d-grid">
